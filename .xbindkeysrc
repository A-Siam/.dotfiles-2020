"$TERMINAL -e sh -c "cd /run/media/asiam/MyProjects && vim""
    Mod4+v

"colorpicker --preview --one-shot --short | xclip -selection clipboard"
	Mod4 + Alt + c 

"$HOME/.scripts/clip-google-search"
